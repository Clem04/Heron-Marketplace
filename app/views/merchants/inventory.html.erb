<div class="product-list">
  <% @products.each do |product| %>
    <div class="product-card">
      <div class="product-img" style ="background-image: url(<%= cl_image_path product.photos[0].key %>)">
        <div class="product-icons">
          <div class="icon-btn">
            <a href="#"><%= image_tag 'edit-list-icon'%></a>
          </div>
        </div>
      </div>
      <div class="product-infos">
        <%= link_to category_product_path(@category, product) do %>
          <h4><%= product.name %></h4>
        <% end %>
        <p>Stock</p>
        <% total = 0 %>
        <% product.product_variants.each do |variant| %>
            <% total += variant.stock_qty.to_i %>
        <% end %>
        <p><%= total %></p>
      </div>
    </div>
  <% end %>
</div>
