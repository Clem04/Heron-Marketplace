<%= simple_form_for(@product) do |f| %>
  <%= f.input :photo_1, as: :file%>
  <%= f.input :sub_category_id, label: 'Sub Category', , collection: SubCategory.all %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.submit 'Add product', class: ".add-cart-btn"%>
<% end %>
