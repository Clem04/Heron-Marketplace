<%= simple_form_for(@product) do |f| %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :sub_category_id, collection: SubCategory.all %>
  <%= f.input :label_ids, as: :check_boxes, collection: Label.all %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%#= f.input :sku %>
  <%= f.input :price %>
  <%= f.simple_fields_for :product_variants do |u| %>
    <%= u.input :size_ids, as: :check_boxes, collection: Size.all %>
  <% end %>
  <%= f.submit 'Add product', class: ".add-cart-btn"%>
<% end %>
